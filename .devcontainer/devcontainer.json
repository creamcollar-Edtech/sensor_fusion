{
  "name": "Sensor Fusion Demo",
  "image": "mcr.microsoft.com/devcontainers/python:3.9",  // Base Python image
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.9",
      "installJupyterlab": false
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "vscode"
}
